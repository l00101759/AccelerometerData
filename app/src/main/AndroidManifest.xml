<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fraser.accelerometerdata">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Gesture Recognition"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogIn">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CompassActivity"
            android:label="@string/title_activity_compass"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CompassActivity2"
            android:label="@string/title_activity_compass2"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity
            android:name=".OrientationActivity"
            android:label="@string/title_activity_orientation"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity
            android:name=".Orientation"
            android:label="@string/title_activity_orientation"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity
            android:name=".SpeechTester"
            android:label="@string/title_activity_gesture_recognised"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity
            android:name=".RecordGesture"
            android:label="@string/title_activity_record_gesture"
            android:parentActivityName=".LogIn"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LogIn" />
        </activity>
        <activity android:name=".GestureRecognition"></activity>
        <activity android:name=".SpeechRecognised"></activity>
    </application>

</manifest>
